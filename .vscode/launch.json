    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload"
            ],
            "cwd": "${workspaceFolder}/backend/src",
            "jinja": true,
            "envFile": "${workspaceFolder}/env.local",
            "env": {
                "ENV": "local"
            }
        },
